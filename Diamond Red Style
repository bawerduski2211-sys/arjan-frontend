<div class="box">
    <h2>OTP VERIFY</h2>
    <p>کۆدێ ٦ ژماری یێ بۆ جیمەیلا تە هاتی ل ڤێرێ بنڤێسە</p>
    
    <div class="otp-wrapper">
        <input type="number" class="otp-input" maxlength="1" oninput="step(this, 0)">
        <input type="number" class="otp-input" maxlength="1" oninput="step(this, 1)">
        <input type="number" class="otp-input" maxlength="1" oninput="step(this, 2)">
        <input type="number" class="otp-input" maxlength="1" oninput="step(this, 3)">
        <input type="number" class="otp-input" maxlength="1" oninput="step(this, 4)">
        <input type="number" class="otp-input" maxlength="1" oninput="step(this, 5)">
    </div>

    <button class="btn" onclick="verifyDiamond()">پشتڕاستکرنا دیامۆند</button>
</div>

<script>
    // گواستنا ئۆتۆماتیکی د ناڤبەرا خانان دا
    function step(el, index) {
        if (el.value.length > 1) el.value = el.value.slice(0, 1);
        if (el.value && index < 5) {
            document.querySelectorAll('.otp-input')[index + 1].focus();
        }
    }

    async function verifyDiamond() {
        let otpCode = "";
        document.querySelectorAll('.otp-input').forEach(input => otpCode += input.value);

        if(otpCode.length < 6) {
            alert("تکایە هەمی ٦ ژماران بنڤێسە");
            return;
        }

        // پشکنین دگەل Backend (Arjan-backend)
        console.log("Verifying OTP with Backend...");
        
        // ئەگەر کۆد درست بیت، دچیتە ناڤ پڕۆفایلێ
        alert("DIAMOND ACCESS GRANTED!");
        window.location.href = 'profile.html';
    }
</script>

